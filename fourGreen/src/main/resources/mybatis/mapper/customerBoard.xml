<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.mapper.customerBoard">
<!--데이터베이스 -->
	<sql id="selectAllcustboard">
		SELECT * FROM customerBoard
	</sql>

<!-- 전체조회 -->
	<select id="selectAllcustomer" resultType="customerBoardVO"> 
		<include refid="selectAllcustboard"/>
		 ORDER BY name DESC
	</select>
	
<!-- 게시글 상세정보 -->
	<select id="selectByName" resultType="customerBoardVO" parameterType="String">
		<include refid="selectAllcustboard"/>
		WHERE num=#{num}
	</select>
	
<!-- 전체게시물 갯수 조회 -->
	 <select id="selectCountMg" resultType="int"> 
		SELECT count(*) FROM customerBoard
	</select>
	
<!-- 게시글 등록 -->
	<insert id="customerWrite" parameterType="customerBoardVO">
		INSERT INTO customerBoard(num, name, title, content)
		VALUES(customerBoard_seq.nextval,#{name},#{title},#{content})
	</insert>
	
</mapper>